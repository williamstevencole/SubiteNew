# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

# Database
DATABASE_URL="postgresql://subite:subite@localhost:5432/subite?schema=public"

# App
PORT=4000
NODE_ENV=development

# JWT Configuration
JWT_ACCESS_SECRET=dev_access_secret_change_me_in_production

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_USER=120

# Supabase (Storage) - Optional for file management
SUPABASE_URL="https://YOUR-PROJECT.supabase.co"
SUPABASE_SERVICE_KEY="YOUR_SERVICE_ROLE_KEY"
SUPABASE_BUCKET="subite"

# Redis (Optional for caching/sessions)
REDIS_URL="redis://localhost:6379"